<!DOCTYPE html>
<html lang="pt-BR" class="h-full">
<head>
  <%- include('partials/head', {title: title}); %>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .chat-container {
      display: flex;
      flex-direction: column;
      height: calc(100vh - 150px);
    }
    
    .dark .chat-container {
      background-color: #111827;
    }
    
    .chat-messages {
      flex: 1;
      overflow-y: auto;
      padding: 15px;
      background-color: #f8f9fa;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    
    .dark .chat-messages {
      background-color: #111827;
    }
    
    .message {
      max-width: 80%;
      padding: 10px 15px;
      border-radius: 18px;
      position: relative;
      word-wrap: break-word;
      font-size: 0.9rem;
    }
    
    .received {
      align-self: flex-start;
      background-color: #ffffff;
      border: 1px solid #e5e5ea;
      color: #111827;
    }
    
    .dark .received {
      background-color: #374151;
      border-color: #4b5563;
      color: #f3f4f6;
    }
    
    .sent {
      align-self: flex-end;
      background-color: #007bff;
      color: white;
    }
    
    .message-info {
      font-size: 0.7rem;
      margin-top: 5px;
      opacity: 0.8;
    }
    
    .received .message-info {
      text-align: left;
      color: #666;
    }
    
    .dark .received .message-info {
      color: #d1d5db;
    }
    
    .sent .message-info {
      text-align: right;
      color: rgba(255,255,255,0.8);
    }
    
    .chat-input-container {
      background-color: white;
      padding: 10px;
      border-top: 1px solid #dee2e6;
    }
    
    .dark .chat-input-container {
      background-color: #1f2937;
      border-top-color: #374151;
    }
    
    .chat-header {
      padding: 10px 15px;
      background-color: #f8f9fa;
      border-bottom: 1px solid #dee2e6;
      position: sticky;
      top: 0;
      z-index: 10;
    }
    
    .dark .chat-header {
      background-color: #1f2937;
      border-bottom-color: #374151;
      color: #f3f4f6;
    }
    
    @media (max-width: 768px) {
      .chat-container {
        height: calc(100vh - 120px);
      }
    }
  </style>
</head>
<body class="bg-gray-50 dark:bg-gray-900 h-full">
  <%- include('partials/header', {user: user}); %>
  
  <div class="chat-header flex justify-between items-center">
    <h5 class="text-lg font-medium text-gray-800 dark:text-white mb-0">Conversa com <%= outroUsuarioNome %></h5>
    <a href="/chat" class="px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-800 dark:text-white rounded-md hover:bg-gray-300 dark:hover:bg-gray-500">
      <i class="fas fa-arrow-left"></i> Voltar
    </a>
  </div>
  
  <div class="chat-container">
    <div class="chat-messages" id="chat-messages">
      <% if (mensagens && mensagens.length > 0) { %>
        <% mensagens.forEach(mensagem => { %>
          <div class="message <%= mensagem.remetente_id === user.id ? 'sent' : 'received' %>">
            <div class="message-text"><%= mensagem.mensagem %></div>
            <div class="message-info">
              <%= mensagem.remetente_id === user.id ? 'Você' : mensagem.remetente_name %> - 
              <%= new Date(mensagem.data_envio).toLocaleTimeString('pt-BR', {hour: '2-digit', minute:'2-digit'}) %>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="text-center text-gray-500 dark:text-gray-400 my-auto py-4">Nenhuma mensagem ainda. Envie a primeira mensagem!</div>
      <% } %>
    </div>
    
    <div class="chat-input-container">
      <form id="message-form" class="flex gap-2" action="/chat/enviar-mensagem" method="POST">
        <input type="hidden" name="conversa_id" value="<%= conversa.id %>">
        <input type="text" class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-800 dark:text-white" 
               id="message-input" name="mensagem" placeholder="Digite sua mensagem..." autocomplete="off" required>
        <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md" type="submit">
          <i class="fas fa-paper-plane"></i>
        </button>
      </form>
    </div>
  </div>
  
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const chatMessages = document.getElementById('chat-messages');
      scrollToBottom();
      
      // Verifica novas mensagens periodicamente
      const messageCheckInterval = setInterval(checkNewMessages, 3000);
      
      // Envio de mensagem
      document.getElementById('message-form').addEventListener('submit', function(e) {
        e.preventDefault();
        sendMessage();
      });
      
      function scrollToBottom() {
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }
      
      function checkNewMessages() {
        fetch(`/chat/verificar-mensagens/<%= conversa.id %>`)
          .then(response => response.json())
          .then(messages => {
            if (messages.length > 0) {
              messages.forEach(addNewMessage);
              scrollToBottom();
            }
          })
          .catch(console.error);
      }
      
      function addNewMessage(message) {
        const messageElement = document.createElement('div');
        messageElement.className = `message ${message.remetente_id === <%= user.id %> ? 'sent' : 'received'}`;
        
        const date = new Date(message.data_envio);
        const timeString = date.toLocaleTimeString('pt-BR', {hour: '2-digit', minute:'2-digit'});
        
        messageElement.innerHTML = `
          <div class="message-text">${message.mensagem}</div>
          <div class="message-info">
            ${message.remetente_id === <%= user.id %> ? 'Você' : message.remetente_name} - ${timeString}
          </div>
        `;
        
        chatMessages.appendChild(messageElement);
      }
      
      function sendMessage() {
        const input = document.getElementById('message-input');
        const message = input.value.trim();
        
        if (message) {
          fetch('/chat/enviar-mensagem', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({
              conversa_id: <%= conversa.id %>,
              mensagem: message
            })
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              input.value = '';
              addNewMessage({
                mensagem: message,
                remetente_id: <%= user.id %>,
                remetente_name: '<%= user.name %>',
                data_envio: new Date().toISOString()
              });
              scrollToBottom();
            }
          })
          .catch(console.error);
        }
      }
    });
  </script>
</body>
</html>