<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <%- include('../partials/head', {title: 'Cadastro'}); %>
  <style>
    .auth-container {
      background-color: #2c3e50;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }
    
    .auth-card {
      background: white;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 400px;
    }
    
    .auth-title {
      color: #2c3e50;
      text-align: center;
      margin-bottom: 1.5rem;
    }
    
    .auth-footer {
      text-align: center;
      margin-top: 1.5rem;
    }
    
    .password-toggle {
      cursor: pointer;
    }
  </style>
</head>
<body class="auth-body">
  <div class="auth-container">
    <div class="auth-card">
      <h2 class="auth-title">Cadastro</h2>
      <form action="/register" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Nome</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Senha</label>
          <div class="input-group">
            <input type="password" class="form-control" id="password" name="password" required>
            <button class="btn btn-outline-secondary toggle-password" type="button" toggle="#password">
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="form-label">Confirmar Senha</label>
          <div class="input-group">
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            <button class="btn btn-outline-secondary toggle-password" type="button" toggle="#password">
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>
        <button type="submit" class="btn btn-primary w-100 py-2">Cadastrar</button>
      </form>
      <div class="auth-footer">
        <p class="mb-0">Já tem uma conta? <a href="/login">Faça login</a></p>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/script.js"></script>
  <script>
    document.querySelectorAll('.toggle-password').forEach(button => {
      button.addEventListener('click', function() {
        const targetId = this.getAttribute('toggle');
        const input = document.querySelector(targetId);
        const icon = this.querySelector('i');
        
        if (input.type === 'password') {
          input.type = 'text';
          icon.classList.replace('fa-eye', 'fa-eye-slash');
        } else {
          input.type = 'password';
          icon.classList.replace('fa-eye-slash', 'fa-eye');
        }
      });
    });
  </script>
  
</body>
</html>