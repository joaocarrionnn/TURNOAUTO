<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <%- include('../partials/head', {title: 'Cadastro'}); %>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'custom-blue': '#2F76BD',
          }
        }
      }
    }
  </script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    .auth-card {
      backdrop-filter: blur(8px);
      background-color: rgba(255, 255, 255, 0.92);
    }
    .toggle-password {
      transition: all 0.2s ease;
    }
    .toggle-password:hover {
      opacity: 0.7;
    }
  </style>
</head>
<body class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
  <div class="auth-card w-full max-w-md rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-8">
      <div class="flex justify-center mb-8">
        <img src="/images/logo_preto.png" alt="Logo" class="h-16 w-16 md:h-20 md:w-20">
      </div>
      
      <h2 class="text-2xl font-medium text-custom-blue text-center mb-6">Crie sua conta</h2>
      
      <form action="/register" method="POST" class="space-y-4">
        <div>
          <label for="name" class="block text-sm font-medium text-custom-blue mb-1">Nome completo</label>
          <input 
            type="text" 
            id="name"
            name="name" 
            class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-1 focus:ring-custom-blue focus:border-custom-blue outline-none transition-all text-gray-700 placeholder-gray-400"
            required
            placeholder="Seu nome completo"
          />
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-custom-blue mb-1">Email</label>
          <input 
            type="email" 
            id="email"
            name="email" 
            class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-1 focus:ring-custom-blue focus:border-custom-blue outline-none transition-all text-gray-700 placeholder-gray-400"
            required
            placeholder="seu@email.com"
          />
        </div>
        
        <div>
          <label for="password" class="block text-sm font-medium text-custom-blue mb-1">Senha</label>
          <div class="relative">
            <input 
              type="password" 
              id="password"
              name="password" 
              class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-1 focus:ring-custom-blue focus:border-custom-blue outline-none transition-all text-gray-700 placeholder-gray-400 pr-10"
              required
              placeholder="••••••••"
            />
            <button 
              type="button" 
              class="absolute inset-y-0 right-0 px-3 flex items-center toggle-password text-gray-500 hover:text-custom-blue"
              toggle="#password"
            >
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>
        
        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-custom-blue mb-1">Confirmar Senha</label>
          <div class="relative">
            <input 
              type="password" 
              id="confirmPassword"
              name="confirmPassword" 
              class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-1 focus:ring-custom-blue focus:border-custom-blue outline-none transition-all text-gray-700 placeholder-gray-400 pr-10"
              required
              placeholder="••••••••"
            />
            <button 
              type="button" 
              class="absolute inset-y-0 right-0 px-3 flex items-center toggle-password text-gray-500 hover:text-custom-blue"
              toggle="#confirmPassword"
            >
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>
        
        <button type="submit" class="w-full py-3 px-4 rounded-lg bg-custom-blue hover:bg-[#2566a0] text-white font-medium transition-all flex items-center justify-center mt-6">
          Cadastrar
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </button>
      </form>
      
      <div class="mt-6 text-center text-sm text-gray-600">
        Já tem uma conta? <a href="/login" class="font-medium text-custom-blue hover:underline">Faça login</a>
      </div>
    </div>
  </div>

  <script>
    document.querySelectorAll('.toggle-password').forEach(button => {
      button.addEventListener('click', function() {
        const targetId = this.getAttribute('toggle');
        const input = document.querySelector(targetId);
        const icon = this.querySelector('i');
        
        if (input.type === 'password') {
          input.type = 'text';
          icon.classList.replace('fa-eye', 'fa-eye-slash');
        } else {
          input.type = 'password';
          icon.classList.replace('fa-eye-slash', 'fa-eye');
        }
      });
    });
  </script>
</body>
</html>