<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <%- include('partials/head', {title: 'Alertas'}); %>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .severidade-critica { 
      background-color: #dc2626; 
      color: white;
      border-left: 4px solid #7f1d1d;
    }
    .severidade-alta { 
      background-color: #ea580c; 
      color: white;
      border-left: 4px solid #9a3412;
    }
    .severidade-media { 
      background-color: #f59e0b; 
      color: #1e293b;
      border-left: 4px solid #b45309;
    }
    .severidade-baixa { 
      background-color: #16a34a; 
      color: white;
      border-left: 4px solid #166534;
    }
    .alerta-critico-row {
      animation: pulse 2s infinite;
    }
    @keyframes pulse {
      0% { background-color: rgba(220, 38, 38, 0.05); }
      50% { background-color: rgba(220, 38, 38, 0.15); }
      100% { background-color: rgba(220, 38, 38, 0.05); }
    }
    .severidade-badge {
      display: inline-flex;
      align-items: center;
      padding: 0.35rem 0.75rem;
      border-radius: 0.375rem;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 0.05em;
    }
  </style>
</head>
<body>
  <%- include('partials/header', {user: user}); %>
  
  <main class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-800">Alertas do Sistema</h1>
        <p class="text-gray-600">Monitoramento de eventos e incidentes</p>
      </div>
      
      <% if (user.role === 'admin') { %>
        <a href="/alertas/novo" class="flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors shadow-md">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Novo Alerta
        </a>
      <% } %>
    </div>
    
    <!-- Status de Alertas -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-white rounded-lg shadow p-4 border-t-4 border-red-600">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-red-100 text-red-600 mr-3">
            <i class="fas fa-exclamation-triangle text-xl"></i>
          </div>
          <div>
            <h3 class="font-bold text-gray-700">Críticos</h3>
            <p class="text-2xl font-bold">
              <%= typeof alertas !== 'undefined' ? alertas.filter(a => a.status === 'ativo' && a.severidade === 'crítica').length : 0 %>
            </p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow p-4 border-t-4 border-orange-500">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-orange-100 text-orange-600 mr-3">
            <i class="fas fa-exclamation-circle text-xl"></i>
          </div>
          <div>
            <h3 class="font-bold text-gray-700">Altos</h3>
            <p class="text-2xl font-bold">
              <%= typeof alertas !== 'undefined' ? alertas.filter(a => a.status === 'ativo' && a.severidade === 'alta').length : 0 %>
            </p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow p-4 border-t-4 border-yellow-400">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-yellow-100 text-yellow-600 mr-3">
            <i class="fas fa-info-circle text-xl"></i>
          </div>
          <div>
            <h3 class="font-bold text-gray-700">Médios</h3>
            <p class="text-2xl font-bold">
              <%= typeof alertas !== 'undefined' ? alertas.filter(a => a.status === 'ativo' && a.severidade === 'média').length : 0 %>
            </p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow p-4 border-t-4 border-green-500">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-green-100 text-green-600 mr-3">
            <i class="fas fa-check-circle text-xl"></i>
          </div>
          <div>
            <h3 class="font-bold text-gray-700">Baixos</h3>
            <p class="text-2xl font-bold">
              <%= typeof alertas !== 'undefined' ? alertas.filter(a => a.status === 'ativo' && a.severidade === 'baixa').length : 0 %>
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Alertas Ativos -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden mb-6">
      <div class="p-6 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <h2 class="text-xl font-semibold text-gray-800 flex items-center">
          <i class="fas fa-bell text-red-500 mr-2"></i> Alertas Ativos
          <span class="ml-2 bg-red-100 text-red-800 text-sm font-medium px-2.5 py-0.5 rounded-full">
            <%= typeof alertas !== 'undefined' ? alertas.filter(a => a.status === 'ativo').length : 0 %>
          </span>
        </h2>
      </div>
      <div class="overflow-x-auto">
        <% if (typeof alertas !== 'undefined' && alertas.filter(a => a.status === 'ativo').length > 0) { %>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Título</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descrição</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Severidade</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Criado por</th>
                <% if (user.role === 'admin') { %>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                <% } %>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% alertas.filter(a => a.status === 'ativo').forEach(alerta => { %>
                <tr class="hover:bg-gray-50 transition-colors <% if (alerta.severidade === 'crítica') { %>alerta-critico-row<% } %>">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <i class="far fa-calendar-alt mr-1 text-gray-400"></i>
                    <%= new Date(alerta.data_criacao).toLocaleDateString('pt-BR') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <% if (alerta.severidade === 'crítica') { %>
                      <i class="fas fa-exclamation-triangle text-red-500 mr-1"></i>
                    <% } else if (alerta.severidade === 'alta') { %>
                      <i class="fas fa-exclamation-circle text-orange-500 mr-1"></i>
                    <% } else if (alerta.severidade === 'média') { %>
                      <i class="fas fa-info-circle text-yellow-500 mr-1"></i>
                    <% } else { %>
                      <i class="fas fa-check-circle text-green-500 mr-1"></i>
                    <% } %>
                    <%= alerta.titulo %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate" title="<%= alerta.descricao %>">
                    <%= alerta.descricao %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="severidade-badge
                      <% if (alerta.severidade === 'crítica') { %>severidade-critica<% } %>
                      <% if (alerta.severidade === 'alta') { %>severidade-alta<% } %>
                      <% if (alerta.severidade === 'média') { %>severidade-media<% } %>
                      <% if (alerta.severidade === 'baixa') { %>severidade-baixa<% } %>">
                      <% if (alerta.severidade === 'crítica') { %>
                        <i class="fas fa-exclamation-triangle mr-1"></i>
                      <% } else if (alerta.severidade === 'alta') { %>
                        <i class="fas fa-exclamation-circle mr-1"></i>
                      <% } else if (alerta.severidade === 'média') { %>
                        <i class="fas fa-info-circle mr-1"></i>
                      <% } else { %>
                        <i class="fas fa-check-circle mr-1"></i>
                      <% } %>
                      <%= alerta.severidade %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <i class="fas fa-user-circle mr-1 text-gray-400"></i>
                    <%= alerta.user_name %>
                  </td>
                  <% if (user.role === 'admin') { %>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <a href="/alertas/editar/<%= alerta.id %>" class="text-blue-600 hover:text-blue-900 mr-3">
                        <i class="fas fa-edit mr-1"></i>Editar
                      </a>
                      <form action="/alertas/excluir/<%= alerta.id %>" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-900" onclick="return confirm('Tem certeza que deseja excluir este alerta?')">
                          <i class="fas fa-trash-alt mr-1"></i>Excluir
                        </button>
                      </form>
                    </td>
                  <% } %>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <div class="p-8 text-center">
            <i class="far fa-check-circle text-green-500 text-5xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-1">Nenhum alerta ativo</h3>
            <p class="text-gray-500">Todos os sistemas operando normalmente</p>
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- Histórico de Alertas -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <div class="p-6 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <h2 class="text-xl font-semibold text-gray-800 flex items-center">
          <i class="fas fa-history text-blue-500 mr-2"></i> Histórico de Alertas
        </h2>
      </div>
      <div class="overflow-x-auto">
        <% if (typeof alertas !== 'undefined' && alertas.filter(a => a.status !== 'ativo').length > 0) { %>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Título</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descrição</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Severidade</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Criado por</th>
                <% if (user.role === 'admin') { %>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                <% } %>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% alertas.filter(a => a.status !== 'ativo').forEach(alerta => { %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <i class="far fa-calendar-alt mr-1 text-gray-400"></i>
                    <%= new Date(alerta.data_criacao).toLocaleDateString('pt-BR') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <% if (alerta.severidade === 'crítica') { %>
                      <i class="fas fa-exclamation-triangle text-red-500 mr-1"></i>
                    <% } else if (alerta.severidade === 'alta') { %>
                      <i class="fas fa-exclamation-circle text-orange-500 mr-1"></i>
                    <% } else if (alerta.severidade === 'média') { %>
                      <i class="fas fa-info-circle text-yellow-500 mr-1"></i>
                    <% } else { %>
                      <i class="fas fa-check-circle text-green-500 mr-1"></i>
                    <% } %>
                    <%= alerta.titulo %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate" title="<%= alerta.descricao %>">
                    <%= alerta.descricao %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="severidade-badge
                      <% if (alerta.severidade === 'crítica') { %>severidade-critica<% } %>
                      <% if (alerta.severidade === 'alta') { %>severidade-alta<% } %>
                      <% if (alerta.severidade === 'média') { %>severidade-media<% } %>
                      <% if (alerta.severidade === 'baixa') { %>severidade-baixa<% } %>">
                      <% if (alerta.severidade === 'crítica') { %>
                        <i class="fas fa-exclamation-triangle mr-1"></i>
                      <% } else if (alerta.severidade === 'alta') { %>
                        <i class="fas fa-exclamation-circle mr-1"></i>
                      <% } else if (alerta.severidade === 'média') { %>
                        <i class="fas fa-info-circle mr-1"></i>
                      <% } else { %>
                        <i class="fas fa-check-circle mr-1"></i>
                      <% } %>
                      <%= alerta.severidade %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                      <% if (alerta.status === 'resolvido') { %>bg-green-100 text-green-800<% } %>
                      <% if (alerta.status === 'cancelado') { %>bg-gray-100 text-gray-800<% } %>">
                      <% if (alerta.status === 'resolvido') { %>
                        <i class="fas fa-check-circle mr-1"></i>
                      <% } else { %>
                        <i class="fas fa-ban mr-1"></i>
                      <% } %>
                      <%= alerta.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <i class="fas fa-user-circle mr-1 text-gray-400"></i>
                    <%= alerta.user_name %>
                  </td>
                  <% if (user.role === 'admin') { %>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <a href="/alertas/editar/<%= alerta.id %>" class="text-blue-600 hover:text-blue-900 mr-3">
                        <i class="fas fa-edit mr-1"></i>Editar
                      </a>
                      <form action="/alertas/excluir/<%= alerta.id %>" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-900" onclick="return confirm('Tem certeza que deseja excluir este alerta?')">
                          <i class="fas fa-trash-alt mr-1"></i>Excluir
                        </button>
                      </form>
                    </td>
                  <% } %>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <div class="p-8 text-center">
            <i class="far fa-folder-open text-blue-500 text-5xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-1">Histórico vazio</h3>
            <p class="text-gray-500">Nenhum alerta resolvido ou cancelado</p>
          </div>
        <% } %>
      </div>
    </div>
  </main>
  
  <%- include('partials/footer'); %>
  <script src="/js/script.js"></script>
</body>
</html>